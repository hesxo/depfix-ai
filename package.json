{
  "name": "depfix-ai",
  "version": "0.2.15",
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "packageManager": "pnpm@9.15.0",
  "scripts": {
    "start": "node bin/run.js",
    "build": "tsc -b",
    "test": "vitest run",
    "prepack": "npm run build",
    "lint": "eslint .",
    "version:patch": "npm version patch",
    "version:minor": "npm version minor",
    "version:major": "npm version major"
  },
  "files": [
    "bin/**",
    "dist/**"
  ],
  "bin": {
    "depfix-ai": "bin/run.js",
    "depfix-ai-latest": "bin/run-latest.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/hesxo/depfix-ai.git"
  },
  "oclif": {
    "commands": "./dist/commands",
    "topicSeparator": " "
  },
  "dependencies": {
    "@clack/prompts": "^1.0.0",
    "@oclif/core": "^4.0.0",
    "dotenv": "^17.2.4",
    "execa": "^9.6.1",
    "fast-glob": "^3.3.3",
    "picocolors": "^1.1.1"
  },
  "devDependencies": {
    "@types/node": "^25.2.0",
    "eslint": "^9.39.2",
    "prettier": "^3.8.1",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
